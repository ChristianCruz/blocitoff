<% if @list.nil?%>
  <%= form_for List.new do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Enter name for title" %>
      </div>
      

      <div class="form-group">
        <%= f.submit "Create", class: 'btn-default btn-success btn-lg' %>
      </div>
      <hr/>
    <% end %>
<% else %>
  <%= @list.title %>
<% end %>